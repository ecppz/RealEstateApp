@using System.Security.Claims
@using Domain.Common.Enums
@model List<AdminViewModel>
@{
    ViewData["Title"] = "Mantenimiento de Administradores";
    Layout = "_LayoutAdmin";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Listado de Administradores</h2>
    <a asp-action="CreateAdmin" class="btn btn-primary">+ Crear Administrador</a>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Usuario</th>
            <th>Cédula</th>
            <th>Correo</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var admin in Model)
        {
            <tr>
                <td>@admin.Name</td>
                <td>@admin.LastName</td>
                <td>@admin.UserName</td>
                <td>@admin.DocumentNumber</td>
                <td>@admin.Email</td>
                <td>
                    @if (admin.Status == UserStatus.Active)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactivo</span>
                    }
                </td>
                <td>
                    @if (admin.Id != User.FindFirstValue(ClaimTypes.NameIdentifier))
                    {
                        @if (admin.Status == UserStatus.Active)
                        {
                            <a asp-action="DeactivateAdmin" asp-route-id="@admin.Id" class="btn btn-warning btn-sm">Desactivar</a>
                        }
                        else
                        {
                            <a asp-action="ActivateAdmin" asp-route-id="@admin.Id" class="btn btn-success btn-sm">Activar</a>
                        }

                        <a asp-action="EditAdmin" asp-route-id="@admin.Id" class="btn btn-info btn-sm">Editar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
