@model ActivateAgentViewModel
@{
    ViewData["Title"] = "Activar Agente";
    Layout = "_LayoutAdmin";
}

<div class="alert alert-info mt-4">
    <h4>¿Está seguro que desea activar este agente?</h4>
    <p><strong>@Model.Name @Model.LastName</strong> - @Model.Email</p>
</div>

<form asp-action="ActivateAgent" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-success">Aceptar</button>
    <a asp-action="Agents" class="btn btn-secondary">Cancelar</a>
</form>
