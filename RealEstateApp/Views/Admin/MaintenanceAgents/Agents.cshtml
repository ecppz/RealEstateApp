@using Domain.Common.Enums
@model List<AgentViewModel>
@{
    ViewData["Title"] = "Listado de Agentes";
    Layout = "_LayoutAdmin";
}

<h2 class="mb-4">Listado de Agentes</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Cantidad de Propiedades</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var agent in Model)
        {
            <tr>
                <td>@agent.Name</td>
                <td>@agent.LastName</td>
                <td>@agent.Email</td>
                <td>@agent.PropertyCount</td>
                <td>
                    @if (agent.Status == UserStatus.Active)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactivo</span>
                    }
                </td>
                <td>
                    @if (agent.Status == UserStatus.Active)
                    {
                        <a asp-action="DeactivateAgent" asp-route-id="@agent.Id" class="btn btn-warning btn-sm">Desactivar</a>
                    }
                    else
                    {
                        <a asp-action="ActivateAgent" asp-route-id="@agent.Id" class="btn btn-success btn-sm">Activar</a>
                    }

                    <a asp-action="DeleteAgent" asp-route-id="@agent.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
