@model DeactivateAgentViewModel
@{
    ViewData["Title"] = "Desactivar Agente";
    Layout = "_LayoutAdmin";
}

<div class="alert alert-warning mt-4">
    <h4>¿Está seguro que desea desactivar este agente y sus propiedades?</h4>
    <p><strong>@Model.Name @Model.LastName</strong> - @Model.Email</p>
    <p>Cantidad de propiedades: @Model.PropertyCount</p>
</div>

<form asp-action="DeactivateAgent"" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-warning">Aceptar</button>
    <a asp-action="Agents" class="btn btn-secondary">Cancelar</a>
</form>
