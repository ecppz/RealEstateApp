@model CreatePropertyViewModel
@{
    ViewData["Title"] = "Crear Propiedad";
    Layout = "_LayoutAgent";
}

<h2><i class="bi bi-plus-circle"></i> Crear Propiedad</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-action="CreateProperty" method="post" enctype="multipart/form-data">

    <div class="mb-3">
        <label asp-for="PropertyTypeId" class="form-label">Tipo de Propiedad</label>
        <select asp-for="PropertyTypeId" class="form-select" asp-items="ViewBag.PropertyTypes"></select>
        <span asp-validation-for="PropertyTypeId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SaleTypeId" class="form-label">Tipo de Venta</label>
        <select asp-for="SaleTypeId" class="form-select" asp-items="ViewBag.SaleTypes"></select>
        <span asp-validation-for="SaleTypeId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Mejoras</label>
        @foreach (var imp in (IEnumerable<SelectListItem>)ViewBag.Improvements)
        {
            <div class="form-check">
                <label class="form-check-label">
                <input type="checkbox"
                       class="form-check-input"
                       name="Improvements"
                       value="@imp.Value"
                       @(imp.Selected ? "checked" : "") />
                    @imp.Text
               </label>
            </div>
        }
        <span asp-validation-for="Improvements" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label">Precio (DOP)</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Descripción</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SizeInMeters" class="form-label">Tamaño (m²)</label>
        <input asp-for="SizeInMeters" class="form-control" />
        <span asp-validation-for="SizeInMeters" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Bedrooms" class="form-label">Habitaciones</label>
        <input asp-for="Bedrooms" class="form-control" />
        <span asp-validation-for="Bedrooms" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Bathrooms" class="form-label">Baños</label>
        <input asp-for="Bathrooms" class="form-control" />
        <span asp-validation-for="Bathrooms" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Images" class="form-label">Imágenes (1 a 4)</label>
        <input asp-for="Images" type="file" class="form-control" multiple />
        <span asp-validation-for="Images" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Crear</button>
    <a asp-action="Properties" class="btn btn-secondary">Volver</a>
</form>
