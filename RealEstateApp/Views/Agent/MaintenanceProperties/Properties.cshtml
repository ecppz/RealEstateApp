@using Domain.Common.Enums
@model List<PropertyViewModel>
@{
    ViewData["Title"] = "Listado de Propiedades";
    Layout = "_LayoutAgent";
}

<h2 class="mb-4">Listado de Propiedades</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
<a asp-action="CreateProperty" class="btn btn-success mt-3">
    <i class="bi bi-plus-circle"></i> Crear Propiedad
</a>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var property in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-img-top text-center p-2">
                        @if (property.Images != null && property.Images.Any())
                        {
                            <img src="@property.Images.First().ImageUrl"
                                 alt="Imagen propiedad"
                                 class="img-fluid rounded"
                                 style="max-height:200px; object-fit:cover;" />
                        }
                        else
                        {
                            <span class="text-muted">Sin imagen</span>
                        }
                    </div>

                    <div class="card-body">
                        <h5 class="card-title">@property.Code</h5>
                        <p class="card-text">
                            <strong>Tipo:</strong> @property.PropertyType?.Name <br />
                            <strong>Venta:</strong> @property.SaleType?.Name <br />
                            <strong>Precio:</strong> @property.Price.ToString("C") <br />
                            <strong>Tamaño:</strong> @property.SizeInMeters m² <br />
                            <strong>Habitaciones:</strong> @property.Bedrooms <br />
                            <strong>Baños:</strong> @property.Bathrooms <br />
                            <strong>Mejoras:</strong>
                            @if (property.Improvements != null && property.Improvements.Any())
                            {
                                @string.Join(", ", property.Improvements.Select(i => i.Improvement?.Name))
                            }
                            else
                            {
                                <span class="text-muted">Sin mejoras</span>
                            }
                        </p>

                        <p>
                            <strong>Estado:</strong>
                            @if (property.Status == PropertyStatus.Available)
                            {
                                <span class="badge bg-success">Disponible</span>
                            }
                            else if (property.Status == PropertyStatus.Sold)
                            {
                                <span class="badge bg-danger">Vendida</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactiva</span>
                            }
                        </p>
                    </div>

                    <div class="card-footer text-center">
                        <a asp-action="EditProperty" asp-route-id="@property.Id" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="DeleteProperty" asp-route-id="@property.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <h2 class="text-center text-muted mt-4">No hay propiedades creadas</h2>
}
