@using Domain.Common.Enums
@model List<PropertyViewModel>
@{
    ViewData["Title"] = "Propiedades del Agente";
}

<h2 class="mb-4">Propiedades disponibles</h2>
<div class="text-left mt-4">
    <a asp-action="ListAgents" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Volver a Agentes
    </a>
</div>
@if (Model != null && Model.Any())
{
    <div class="row mt-4">
        @foreach (var property in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card property-card shadow-sm">
                    <div class="position-relative">
                        @if (property.Images != null && property.Images.Any())
                        {
                            <img src="@Url.Content("~/" + property.Images.First().ImageUrl)"
                                 alt="Imagen de la propiedad"
                                 class="property-image">
                        }
                        else
                        {
                            <div class="bg-light text-center py-5 text-muted">Sin imagen</div>
                        }
                    </div>

                    <div class="card-body property-details">
                        <div class="property-code">
                            <i class="bi bi-hash"></i> Código: @property.Code
                        </div>

                        <p><i class="bi bi-building"></i> <strong>Descripcion:</strong> @property.Description</p>
                        <p><i class="bi bi-geo-alt"></i> <strong>Tipo:</strong> @property.PropertyType?.Name</p>
                        <p><i class="bi bi-currency-dollar"></i> <strong>Venta:</strong> @property.SaleType?.Name</p>
                        <p class="text-danger fw-bold"><i class="bi bi-tag"></i> @property.Price.ToString("C")</p>

                        <hr />

                        <p>
                            <i class="bi bi-stars"></i> <strong>Mejoras:</strong>
                            @if (property.Improvements != null && property.Improvements.Any())
                            {
                                @string.Join(", ", property.Improvements.Select(i => i.Improvement?.Name))
                            }
                            else
                            {
                                <span class="text-muted">Sin mejoras</span>
                            }
                        </p>
                        <p><i class="bi bi-aspect-ratio"></i> <strong>Tamaño:</strong> @property.SizeInMeters m²</p>
                        <p><i class="bi bi-door-open"></i> <strong>Habitaciones:</strong> @property.Bedrooms</p>
                        <p><i class="bi bi-badge-wc"></i> <strong>Baños:</strong> @property.Bathrooms</p>

                        <p>
                            <i class="bi bi-check-circle"></i> <strong>Estado:</strong>
                            @if (property.Status == PropertyStatus.Available)
                            {
                                <span class="badge bg-success">Disponible</span>
                            }
                            else if (property.Status == PropertyStatus.Sold)
                            {
                                <span class="badge bg-danger">Vendida</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactiva</span>
                            }
                        </p>
                    </div>

                    <div class="property-footer text-center">
                        <a asp-action="PropertyDetail" asp-route-id="@property.Id"
                           class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-eye"></i> Ver Detalle
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <h2 class="text-center text-muted mt-4">Este agente no tiene propiedades disponibles</h2>
}
