@model LoginViewModel
@{
    ViewData["Title"] = "Login Page";
    Layout = "_Layout";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
}

<div class="login-container d-flex justify-content-center align-items-center">

    <div class="login-card shadow-sm">

        <div class="text-center mb-4">
            <h2 class="brand-title">RealEstate App</h2> 
            <p class="text-muted">Bienvenido de nuevo!</p>
        </div>

        @Html.ValidationSummary(false, "", new { @class = "text-danger text-center mb-3" })

        <form asp-controller="Login" asp-action="Index" method="POST">

            <div class="form-group mb-3">
                <label asp-for="UserName" class="form-label fw-semibold">Username</label>
                <input class="form-control input-custom" asp-for="UserName" />
            </div>

            <div class="form-group mb-4">
                <label asp-for="Password" class="form-label fw-semibold">Password</label>
                <input class="form-control input-custom" asp-for="Password" />
            </div>

            <button type="submit" class="btn btn-primary login-btn w-100 mb-3">
                <i class="bi bi-door-open"></i> Login
            </button>

            <div class="text-center">
                <a asp-controller="Login" asp-action="ForgotPassword" class="forgot-link">
                    <i class="bi bi-person-fill-exclamation"></i> Forgot password?
                </a>
            </div>

        </form>
    </div>
</div>
