@model List<ImprovementListViewModel>
@{
    Layout = "_LayoutAdmin";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">
        <i class="bi bi-building"></i> Mantenimiento de Mejoras
    </h2>

    <div class="action-bar">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Crear nueva mejora
        </a>
    </div>

    <table class="table table-hover table-striped align-middle">
        <thead>
            <tr>
                <th style="width: 30%">
                    <i class="bi bi-card-text"></i> Nombre
                </th>
                <th style="width: 50%">
                    <i class="bi bi-file-earmark-text"></i> Descripción
                </th>
                <th style="width: 20%" class="text-center">
                    <i class="bi bi-gear"></i> Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><strong>@item.Name</strong></td>
                    <td>@item.Description</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-2">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>