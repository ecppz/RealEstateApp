@model List<ChatClientViewModel>
@{
    Layout = "_LayoutAgent";
    ViewData["Title"] = "Clientes interesados";
}

<h2>Clientes interesados en la propiedad</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Cliente</th>
            <th>Último mensaje</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.ClientName</td>
                <td>@client.LastMessageAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a asp-action="Conversation"
                       asp-route-propertyId="@client.PropertyId"
                       asp-route-clientId="@client.ClientId"
                       class="btn btn-primary">
                        Ver conversación
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>