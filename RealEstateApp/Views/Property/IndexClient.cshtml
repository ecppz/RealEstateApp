@model IEnumerable<PropertyDto>
@{
    Layout = "_LayoutCustomer";
    ViewData["Title"] = "Propiedades disponibles";
}

<div class="container mt-4">
    <h2><i class="bi bi-building me-2"></i> Propiedades disponibles</h2>
    <hr />

    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th><i class="bi bi-hash"></i> Código</th>
                <th><i class="bi bi-currency-dollar"></i> Precio</th>
                <th><i class="bi bi-flag"></i> Estado</th>
                <th><i class="bi bi-eye"></i> Ver más</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var property in Model)
            {
                <tr>
                    <td>@property.Code</td>
                    <td>@property.Price.ToString("C")</td>
                    <td>@property.Status</td>
                    <td>
                        <a asp-controller="Property" asp-action="PropertyDetailClient" asp-route-propertyId="@property.Id"
                           class="btn btn-sm btn-outline-success">
                            <i class="bi bi-house-door"></i> Detalle
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>