@model List<PropertyTypeListViewModel>
@{
    ViewData["Title"] = "Mantenimiento de Tipos de Propiedades";
    Layout = "_LayoutAdmin";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">
        <i class="bi bi-building"></i> Mantenimiento de Tipos de Propiedades
    </h2>

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Crear nuevo tipo
        </a>
    </div>

    <table class="table table-hover table-striped align-middle shadow-sm">
        <thead>
            <tr>
                <th style="width: 25%">
                    <i class="bi bi-card-text"></i> Nombre
                </th>
                <th style="width: 35%">
                    <i class="bi bi-info-circle"></i> Descripción
                </th>
                <th style="width: 20%">
                    <i class="bi bi-house-door"></i> Cantidad de Propiedades
                </th>
                <th style="width: 20%" class="text-center">
                    <i class="bi bi-gear"></i> Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><strong>@item.Name</strong></td>
                    <td>@item.Description</td>
                    <td>
                        <span class="badge bg-info text-dark">
                            <i class="bi bi-houses"></i> @item.PropertyCount
                        </span>
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-2">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>