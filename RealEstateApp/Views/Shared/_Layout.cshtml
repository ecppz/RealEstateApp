<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RealEstateApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
</head>
<body>
    <div class="page-wrapper d-flex">
        <!-- Sidebar vertical -->
        <nav class="d-flex flex-column bg-light border-end p-3" style="width:220px; min-height:100vh;">
            <a class="navbar-brand mb-4" asp-area="" asp-controller="Home" asp-action="Index">RealEstateApp</a>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ListAgents">Agentes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Register">Únete a la app</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index">Iniciar sesión</a>
                </li>
            </ul>
        </nav>

        <!-- Contenido principal -->
        <div class="content-wrapper flex-grow-1 d-flex flex-column">
            <main class="main-content p-4">
                <div class="container">
                    @RenderBody()
                </div>
            </main>
            <footer class="footer-custom mt-auto p-3 bg-light border-top">
                <div class="container">
                    &copy; @DateTime.Now.Year - Eric Pineda | Yohansel Mieses - ITLA RealEstateApp
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>