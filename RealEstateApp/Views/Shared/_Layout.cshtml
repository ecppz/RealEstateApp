<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RealEstateApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar bg-white border-end">
            <div class="sidebar-header p-3">
                <h4 class="text-primary fw-bold">RealEstateApp</h4>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door me-2"></i> <span>Home</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" asp-controller="Home" asp-action="ListAgents">
                        <i class="bi bi-people me-2"></i> <span>Agentes</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" asp-controller="Login" asp-action="Register">
                        <i class="bi bi-person-plus me-2"></i> <span>Únete a la app</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" asp-controller="Login" asp-action="Index">
                        <i class="bi bi-box-arrow-in-right me-2"></i> <span>Iniciar sesión</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Contenido principal -->
        <div class="flex-grow-1">
            <!-- Botón toggle -->
            <button class="btn btn-sm btn-outline-secondary m-2" id="toggleSidebar">
                ☰
            </button>

            <main class="p-4">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </main>

            <footer class="footer-custom mt-auto p-3 bg-light border-top text-center">
                &copy; @DateTime.Now.Year - Eric Pineda | Yohansel Mieses - ITLA RealEstateApp
            </footer>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // JS para colapsar el sidebar
        document.getElementById("toggleSidebar").addEventListener("click", function () {
            document.getElementById("sidebar").classList.toggle("collapsed");
        });
    </script>
</body>
</html>