<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RealEstateApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout-admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>

<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar d-flex flex-column">
            <div class="sidebar-header p-3 border-bottom text-center">
                <h4 class="text-primary fw-bold">RealEstateApp</h4>
            </div>
            <ul class="nav flex-column flex-grow-1">
                <li class="nav-item mb-2">
                    <a class="nav-link d-flex align-items-center text-dark" asp-controller="Admin" asp-action="Index">
                        <i class="bi bi-house-door me-2"></i> <span>Home</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center text-dark" asp-controller="Admin" asp-action="Agents">
                        <i class="bi bi-people me-2"></i> <span>Lista de Agentes</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center text-dark" asp-controller="Admin" asp-action="Admins">
                        <i class="bi bi-shield-lock me-2"></i> <span>Admins</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center text-dark" asp-controller="Admin" asp-action="Developers">
                        <i class="bi bi-code-slash me-2"></i> <span>Desarrolladores</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center text-dark" asp-controller="PropertyTypeMaintenance" asp-action="Index">
                        <i class="bi bi-building me-2"></i> <span>Tipos de Propiedades</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center text-dark" asp-controller="SalesTypeMaintenance" asp-action="Index">
                        <i class="bi bi-tags me-2"></i> <span>Tipos de Ventas</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center text-dark" asp-controller="MaintenanceOfImprovements" asp-action="Index">
                        <i class="bi bi-tools me-2"></i> <span>Mejoras</span>
                    </a>
                </li>
                <li class="nav-item mt-auto">
                    <a class="nav-link d-flex align-items-center text-danger" asp-controller="Login" asp-action="Logout">
                        <i class="bi bi-box-arrow-right me-2"></i> <span>Log out (@User.Identity?.Name)</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Contenido principal -->
        <div class="flex-grow-1 d-flex flex-column">
            <main class="main-content p-4">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </main>
            <footer class="footer-custom bg-light border-top text-center p-3">
                &copy; @DateTime.Now.Year - Eric Pineda | Yohansel Mieses - ITLA RealEstateApp
            </footer>
        </div>
    </div>
</body>
</html>