<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RealEstateApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>

<body>
    <div class="page-wrapper">
        <nav class="sidebar d-flex flex-column">
            <a class="navbar-brand d-block mb-4 text-center fw-bold fs-4" asp-area="" asp-controller="Admin" asp-action="Index">RealEstateApp</a>
            <ul class="nav flex-column flex-grow-1">
                <li class="nav-item mb-2">
                    <a class="nav-link d-flex align-items-center text-dark py-2 px-3 rounded hover-bg" asp-area="" asp-controller="Admin" asp-action="Index">
                        <i class="bi bi-house-door me-2"></i> Home
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link d-flex align-items-center text-dark py-2 px-3 rounded hover-bg" asp-area="" asp-controller="Admin" asp-action="Agents">
                        <i class="bi bi-people me-2"></i> Lista de Agentes
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link d-flex align-items-center text-dark py-2 px-3 rounded hover-bg" asp-area="" asp-controller="Admin" asp-action="Admins">
                        <i class="bi bi-shield-lock me-2"></i> Mantenimiento de admins
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link d-flex align-items-center text-dark py-2 px-3 rounded hover-bg" asp-area="" asp-controller="Admin" asp-action="Developers">
                        <i class="bi bi-code-slash me-2"></i> Mantenimiento de desarrolladores
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link d-flex align-items-center text-dark py-2 px-3 rounded hover-bg" asp-area="" asp-controller="PropertyTypeMaintenance" asp-action="Index">
                        <i class="bi bi-building me-2"></i> Mantenimiento de tipos de propiedades
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link d-flex align-items-center text-dark py-2 px-3 rounded hover-bg" asp-area="" asp-controller="SalesTypeMaintenance" asp-action="Index">
                        <i class="bi bi-tags me-2"></i> Mantenimiento de tipos de ventas
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link d-flex align-items-center text-dark py-2 px-3 rounded hover-bg" asp-area="" asp-controller="MaintenanceOfImprovements" asp-action="Index">
                        <i class="bi bi-tools me-2"></i> Mantenimiento de mejoras
                    </a>
                </li>
                <li class="nav-item mt-auto">
                    <a class="nav-link d-flex align-items-center text-danger py-2 px-3 rounded hover-bg"
                       asp-area="" asp-controller="Login" asp-action="Logout">
                        <i class="bi bi-box-arrow-right me-2"></i> Log out (@User.Identity?.Name)
                    </a>
                </li>
            </ul>
        </nav>

        <div class="content-wrapper flex-grow-1 d-flex flex-column">
            <main class="main-content">
                <div class="container">
                    @RenderBody()
                </div>
            </main>
            <footer class="footer-custom">
                <div class="container">
                    &copy; @DateTime.Now.Year - Eric Pineda | Yohansel Mieses - ITLA RealEstateApp
                </div>
            </footer>
        </div>
  </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
